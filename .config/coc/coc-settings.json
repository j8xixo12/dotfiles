{
	  "languageserver": {
	    "ccls": {
	      "command": "ccls",
	      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
	      "rootPatterns": [".root"],
	      "initializationOptions": {
	        "cache": {
	          "directory": ".ccls-cache"
	        },
	        "client": {
	          "snippetSupport": true
	        }
	      }
	    }
	  }
	}
